def combine_feedback(sales_df, feedback_df):
    # Merge using outer join so no data is lost
    merged = pd.merge(sales_df, feedback_df, on="OrderID", how="outer")
    
    # If multiple feedback sources existed, fill missing values
    # For this example, only one source exists, so we simply keep values
    
    # Fill missing with mean or other source logic
    merged["Feedback_Score"] = merged["Feedback_Score"].fillna(
        merged["Feedback_Score"].mean()
    )
    
    return merged

