import pandas as pd
import matplotlib.pyplot as plt
import numpy as np

# Create the dataset
data = {
    "Game": [1, 2, 3, 4, 5, 6],
    "PointsScored": [95, 102, 78, 88, 110, 100],
    "OpponentPoints": [90, 88, 100, 85, 95, 100],
    "Attendance": [1500, 1800, 1200, 1600, 2000, 1900],
    "Opponent": ["A", "B", "C", "D", "E", "F"]
}
df = pd.DataFrame(data)

# Determine win/loss/tie
df["Result"] = np.where(df["PointsScored"] > df["OpponentPoints"], "Win",
                np.where(df["PointsScored"] < df["OpponentPoints"], "Loss", "Tie"))

# Calculate counts and average points
summary = df.groupby("Result")["PointsScored"].agg(["count", "mean"]).reset_index()

# Sort to ensure consistent order (Win, Loss, Tie)
order = ["Win", "Loss", "Tie"]
summary["Result"] = pd.Categorical(summary["Result"], categories=order, ordered=True)
summary = summary.sort_values("Result")

# Create grouped bar chart
x = np.arange(len(summary))
width = 0.35

fig, ax = plt.subplots()
bars1 = ax.bar(x - width/2, summary["count"], width, label="Games (Count)", color="skyblue", edgecolor="black")
bars2 = ax.bar(x + width/2, summary["mean"], width, label="Avg Points Scored", color="orange", edgecolor="black")

# Labels and styling
ax.set_title("Win/Loss Record vs. Average Points Scored")
ax.set_xlabel("Result Type")
ax.set_ylabel("Count / Average Points")
ax.set_xticks(x)
ax.set_xticklabels(summary["Result"])
ax.legend()
ax.grid(axis="y", linestyle="--", alpha=0.7)

# Annotate values on bars
for bar in bars1 + bars2:
    height = bar.get_height()
    ax.text(bar.get_x() + bar.get_width()/2, height + 0.5, f"{height:.1f}", ha='center', fontweight='bold')

plt.tight_layout()
plt.show()
