import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset
df = pd.read_csv("train.csv")

# ---------------------------------------------
# 1. Scatter Plot – GrLivArea vs SalePrice
# ---------------------------------------------

plt.figure(figsize=(8,6))
plt.scatter(df["GrLivArea"], df["SalePrice"])
plt.title("GrLivArea vs SalePrice")
plt.xlabel("Above Ground Living Area (sq ft)")
plt.ylabel("Sale Price")
plt.grid(True)
plt.show()

# ---------------------------------------------
# 2. Heatmap – Correlation of Key Numeric Features
# ---------------------------------------------

selected_cols = ["GrLivArea", "OverallQual", "TotalBsmtSF", "GarageArea", "SalePrice"]
corr = df[selected_cols].corr()

plt.figure(figsize=(8,6))
sns.heatmap(corr, annot=True, cmap="coolwarm", linewidths=0.5)
plt.title("Correlation Heatmap of Selected Features")
plt.show()

# ---------------------------------------------
# 3. Bubble Chart – GrLivArea vs SalePrice (Bubble = OverallQual)
# ---------------------------------------------

plt.figure(figsize=(10,7))

plt.scatter(
    df["GrLivArea"], 
    df["SalePrice"], 
    s=df["OverallQual"] * 20,   # bubble size
    c=df["YearBuilt"],          # color represents year built
    cmap="viridis",
    alpha=0.6
)

plt.colorbar(label="Year Built")
plt.title("Bubble Chart: GrLivArea vs SalePrice (Bubble = OverallQual)")
plt.xlabel("Above Ground Living Area (sq ft)")
plt.ylabel("Sale Price")
plt.show()
